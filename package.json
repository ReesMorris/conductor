{
  "name": "conductor",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check": "turbo check",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "syncpack:fix": "syncpack fix",
    "syncpack:format": "syncpack format",
    "syncpack:lint": "syncpack lint"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "syncpack": "^14.0.0-alpha.18",
    "turbo": "^2.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --fix"
    ],
    "*.json": [
      "biome check --fix"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
