{
  "name": "conductor",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check": "turbo check",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "dev": "./scripts/dev.sh",
    "dev:apps": "turbo dev",
    "dev:down": "docker compose down",
    "dev:services": "docker compose up -d",
    "postinstall": "turbo db:generate",
    "prepare": "husky",
    "start": "turbo start",
    "syncpack:fix": "syncpack fix",
    "syncpack:format": "syncpack format",
    "syncpack:lint": "syncpack lint"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --fix"
    ],
    "*.json": [
      "biome check --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "syncpack": "^14.0.0-alpha.19",
    "turbo": "^2.5.5"
  },
  "packageManager": "bun@1.2.19"
}
