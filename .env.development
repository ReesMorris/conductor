# Environment
NODE_ENV=development

# Ports
PORT=8080 # Main proxy port
API_PORT=4000 # API Server
PANEL_PORT=3000 # Panel port when running standalone

# URLs
FRONTEND_DOMAIN=localhost
FRONTEND_URL=http://localhost:8080 # Should match PORT above for proxy URLs
API_URL=http://localhost:8080/api # Should match PORT above for API access

# Database
DATABASE_URL=postgresql://conductor:conductor@localhost:5432/conductor

# Authentication (Better Auth)
BETTER_AUTH_URL=http://localhost:8080 # Should match PORT above
BETTER_AUTH_SECRET=this-is-a-test-secret-change-me-in-production

# Security
ENCRYPTION_KEY=08da320bc61cb5c553e96332ce142275f43de815160edeccc532916c0d0edad7 # openssl rand -hex 32

# Railway API Integration
RAILWAY_API_URL=https://backboard.railway.app/graphql/v2
RAILWAY_ENVIRONMENT_ID=7f5e1e0f-a4f0-4e4f-bbd6-f193d4af8ff1
RAILWAY_PROJECT_ID=49404e89-98e1-4483-b460-55df9d7df447

# S3 Storage (Using MinIO locally, any S3-compatible storage in production)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=conductor-uploads
S3_REGION=us-east-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true # Required for MinIO, false for AWS S3

# Logging
LOG_LEVEL=info # Options: trace, debug, info, warn, error, fatal
LOG_REQUESTS=false # Set to false by default since Railway has its own logging

# UI Preferences
DEFAULT_THEME=dark # Options: light, dark, system
TIMEZONE=Europe/London