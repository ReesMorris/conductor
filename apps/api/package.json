{
  "name": "@conductor/api",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && bun build src/index.ts --outdir dist --target bun --minify",
    "check": "biome check --write . && tsc --noEmit",
    "dev": "PORT=${API_PORT:-4000} bun --watch src/index.ts",
    "start": "NODE_ENV=production bun run dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.862.0",
    "@aws-sdk/s3-request-presigner": "^3.862.0",
    "@conductor/auth": "workspace:*",
    "@conductor/database": "workspace:*",
    "@hono/trpc-server": "^0.4.0",
    "@octokit/rest": "^22.0.0",
    "@t3-oss/env-core": "^0.13.8",
    "@trpc/server": "^11.4.4",
    "@types/validator": "^13.15.2",
    "better-auth": "^1.3.4",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "hono": "^4.8.12",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "superjson": "^2.2.2",
    "validator": "^13.15.15",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/bun": "^1.2.19",
    "typescript": "^5.9.2"
  },
  "type": "module"
}
