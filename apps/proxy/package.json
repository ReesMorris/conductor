{
  "name": "@conductor/proxy",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "check": "biome check --write .",
    "dev": "bun --watch src/index.ts",
    "dev:echo": "bun src/echo-server.ts",
    "docker:build": "docker build -t conductor-proxy:latest -f Dockerfile ../..",
    "docker:run": "docker run -p 3000:3000 --env-file .env conductor-proxy:latest",
    "seed": "bun src/seed.ts",
    "start": "bun dist/index.js"
  },
  "dependencies": {
    "@conductor/database": "workspace:*",
    "@t3-oss/env-core": "^0.13.8",
    "dotenv": "^17.2.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.2.0",
    "typescript": "^5.9.2"
  }
}
